<!-- ++++++++ GUEST INFORMATION ++++++++++++++++
  Displays as a confirmation for guests after they book a room.
  Includes guest and booking information. 
  Requests 'this' data from controller/model/orm/DB.
-->

{{#each guest}}
  <h3>Current Guest Information:</h3>
  <h4><strong>Room #{{this.room_number}}</strong></h4>
  <p><strong>First Name:</strong> {{this.first_name}}</p>
  <p><strong>Last Name:</strong> {{this.last_name}}</p>
  <p><strong>Phone:</strong> {{this.phone}}</p>
  <p><strong>Email:</strong> {{this.email}}</p>
  <p><strong>Check-in:</strong> {{this.checkin}}</p>
  <p><strong>Check-out:</strong> {{this.checkout}}</p>

  <!-- PUT request to conytollrt to release room (checkout) -->
  
  <form action="/guest/checkout/?_method=PUT" method="POST">
    <button type="submit" class="btn btn-default" id="book-room">Check Out</button>
  </form>

  <!-- Buttons to additional user views: reserve table or spa service -->

  <a href="/tables">
    <button type="button" class="btn btn-default" id="reservation">Restaurant Reservation</button>
  </a>

   <a href="/spas">
    <button type="button" class="btn btn-default" id="reservation">Spa Reservation</button>
  </a>

 
  <br>
  <a href="/guest/logout">
    <button type="button" class="btn btn-default" id="reservation">Sign Out</button>
  </a>
<div class="row" style="padding-bottom:20px;"></div>
{{/each}}