<!-- ++++++++ TABLE BOOKING ++++++++++++++++
  Restaurant table booking detail. Displays for users after they create booking
  from tables.handlebars (user selects Restaurant from topnav, creates table reservation).
  
  Displays guest name, contact information, party size, and reservation time.
  
  Includes button to return users to restaurant table booking view for additional
  reservations.
-->

<div class="container" style="padding:15px;">
{{#each tables}}
<!-- Requests table information -->
  <h2><strong>Table #{{this.id}}</strong></h2>

  {{#if this.available}}
   <!-- Displays table information -->
    <h3>Current Table Information:</h3>
    <p><strong>Name:</strong> {{this.name}}</p>
    <p><strong>Phone:</strong> {{this.phone}}</p>
    <p><strong>Email:</strong> {{this.email}}</p>
    <p><strong>Party Size:</strong> {{this.num_party}}</p>
    <p><strong>Reservation Time:</strong> {{this.res_time}}</p>
  {{/if}}
{{/each}}
<br>
<!-- Button to return admins to table reservation view -->
<a href="/admin/tables"><button class="btn btn-default" style="margin-bottom:10px;">Go Back</button></a>
</div>